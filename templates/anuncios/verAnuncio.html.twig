{% extends 'base1.html.twig' %}
{% block title %}{{titulo}}{% endblock %}
{% block stylesheets %}
{% endblock %}
{% block contenido %}

    <div class="row">
        <div class="col-md-3 col-sm-6 col-lg-3 portfolio-item">
            <h1>Inicio Usuario</h1>
            <a href="">Añadir anuncio</a>
            <div class="row">

                <div class="col-md-3 col-sm-6 col-lg-3 portfolio-item">
                    <div class="card" style="width: 18rem;">
                        {% for foto in fotos %}
                            <img class="imgfluid" alt="{{foto.nombre}}" src="img/{{foto.nombre}}">
                        {% endfor %}
                        <div class="card-body">
                            <h5 class="card-title">   <a href="" class="card-link">{{anuncio.titulo}}</a></h5>


                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">descripcion: {{anuncio.descripcion}}</li>
                            <li class="list-group-item">Precio: {{anuncio.precio}} €</li>
                            <li class="list-group-item">Fecha creación:  {{anuncio.fechacrea|date('d-m-Y')}}</li>
                            <li class="list-group-item">Modificado: {{anuncio.fechamod|date('d-m-Y')}}</li>

                        </ul>
                                  <ul class="list-group list-group-flush"><h6>Datos Usuario</h6>
                            <li class="list-group-item">Nombre: {{user.nombre}}</li>
                            <li class="list-group-item">Apellidos: {{user.apellidos}}</li>
                            <li class="list-group-item">Teléfono:  {{user.telefono}}</li>


                        </ul>
                        <div class="card-body">
                            <!--
                                                    <a href="{{path('editarAnuncio',{id:anuncio.id})}}" class="card-link">Modificar anuncio</a>
                                                             <a href="{{path('eliminarAnuncio',{id:anuncio.id})}}" class="card-link">Eliminar anuncio</a>
                            -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
    {% block javascripts %}

